# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_12345

# Token Expiry (1d = 1 day, 7d = 7 days, 1h = 1 hour)
JWT_EXPIRES_IN=1d

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/auction-db

# Index Management (set to false in production to prevent duplicate index warnings)
AUTO_CREATE_INDEXES=true

# CORS Configuration
CLIENT_URL=http://localhost:5173

# Socket.IO Configuration
SOCKET_CORS_ORIGIN=http://localhost:5173

# Session Configuration
SESSION_SECRET=your_session_secret_key_change_this_in_production_67890

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret